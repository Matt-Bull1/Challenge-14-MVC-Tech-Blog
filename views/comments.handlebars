<div id="page-card" class="card text-center m-4 shadow rounded">
  <div class="card-body">
    The Tech Blog
  </div>
</div>


<div class="container-fluid mint-container py-2">
    
    <div id="post-card" class="card m-4 border-4">
    <div id="post-card-title" class="card-title px-3">
        {{title}} 
        <span>Posted by {{user.username}} on {{format_date date_created}}</span>
    </div>
    <div class="card-body">
        {{content}}
    </div>
    </div>

    <div class="d-flex justify-content-center">
      <a href="/add-comment/{{id}}" type="button" class="btn p-2 m-2 btn-lg post-btn">
        Add Comment
      </a>

      <a href="/" type="button" class="btn p-2 m-2 btn-lg newpost-btn">Go Back</a>
    </div>

    {{#each comments as |comment|}}
      <div id="post-card" class="card m-4 border-4">
        <div id="comment-card" class="card-body">
          {{comment.comment}}
          <span>--{{user.username}}, {{format_date comment.date_created}}</span>
        </div>
      </div>
    {{/each}}
   
</div>
